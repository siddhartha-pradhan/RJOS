@model Application.DTOs.NewsAndAlert.NewsAndAlertRequestDTO

<form data-ajax="true" data-ajax-mode="replace" data-ajax-method="POST" enctype="multipart/form-data" asp-controller="NewsAndAlert" asp-action="Upsert" data-ajax-success="onSuccessNewsAndAlerts"> 
    <div id="add-newsAndAlert" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="info-header-modalLabel" aria-hidden="true"> 
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header modal-colored-header" style="background-color: #DB4B73">
                    <h4 class="modal-title text-white">Add News And Alert</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"></button>
                </div>
                <div class="modal-body" style="overflow: auto">
                    <input type="hidden" asp-for="@Model.Id" class="form-control" />
                    <div class="mb-3">
                        <label asp-for="@Model.Description" class="form-label mb-2">@Model.Description</label>
                        <input type="hidden" id="newsAndAlert-description" asp-for="@Model.Description" class="form-control" /> 
                        <div id="editor_description" class="editor_description note-editor mb-2" style="height: 250px;"></div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.ValidFrom" class="form-label mb-2">Valid From</label>
                        <input type="datetime-local" asp-for="@Model.ValidFrom" id="validFrom" class="form-control" required="required" onchange="setEndDateMinValue()"/>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.ValidTill" class="form-label mb-2">Valid Till</label>
                        <input type="datetime-local" asp-for="@Model.ValidTill" id="validTill" class="form-control" required="required"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn d-w text-white" style="background-color: #DB4B73" value="Save">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">
    function setEndDateMinValue(){
        let startDateValue = $('#validFrom').val();
        $('#validTill').attr('min', startDateValue);
    }
</script>

