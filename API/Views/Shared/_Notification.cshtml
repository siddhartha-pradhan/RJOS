@if (TempData["Success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/toastr/build/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["Success"]');
        toastr.options = {
            "closeButton": true
        };
    </script>
}

